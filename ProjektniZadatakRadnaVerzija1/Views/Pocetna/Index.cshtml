
@using ProjektniZadatakRadnaVerzija1.Models

@{
    ViewBag.Title = "Index";

    Korisnik korisnik = (Korisnik)Session["korisnik"];
    var imeSlike = Path.GetFileName(korisnik.Fotografija);


    PravoPristupa pravoPristupa = PravoPristupa.VratiPravoPristupa(korisnik.SifraPravaPristupa);


    List<Korisnik> listaPopunjenihKorisnika = (List<Korisnik>)Session["listaPopunjenihKorisnika"];

}


<img src="~/image/@imeSlike" width="100" height="100">

<h1>@pravoPristupa.NazivPristupa</h1>

<table>
    <tr>
        <td>ID</td>
        <td>Ime</td>
        <td>Prezime</td>
        <td>JMBG</td>
        <td></td>
    </tr>
    
    @foreach (Korisnik k in listaPopunjenihKorisnika)
    {
        <tr>
            <td>@k.Id</td>
            <td>@k.Ime</td>
            <td>@k.Prezime</td>
            <td>@k.Jmbg</td>
            <td><a href="/BrisanjeKorisnika/BrisanjeKorisnikaIzBaze?id=@k.Id"><input type="button" value="Brisi"/></a></td>
        </tr>

    }
  
</table>